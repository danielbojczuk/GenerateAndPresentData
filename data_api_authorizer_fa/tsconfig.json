{
  "compilerOptions": {
    "target": "ES2017",
    "strict": true,
    "preserveConstEnums": true,
    "sourceMap": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./.dist/",
    "inlineSourceMap": true,
    "resolveJsonModule": true
  },
  "exclude": [
    "node_modules",
    "test"
  ]
}